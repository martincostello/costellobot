{
  "name": "costellobot",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "GitHub automation for martincostello's repositories.",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts && stylelint --fix lax styles/**/*.css",
    "format-check": "prettier --check scripts/**/*.ts && stylelint --fix styles/**/*.css",
    "lint": "eslint scripts",
    "test": "jest",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/costellobot.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "dependencies": {
    "@grafana/faro-web-sdk": "1.19.0",
    "@grafana/faro-web-tracing": "1.19.0",
    "@microsoft/signalr": "9.0.6",
    "moment": "2.30.1"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@stylistic/eslint-plugin": "5.4.0",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "globals": "16.4.0",
    "jest": "30.2.0",
    "mini-css-extract-plugin": "2.9.4",
    "prettier": "3.6.2",
    "style-loader": "4.0.0",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "ts-jest": "29.4.4",
    "ts-loader": "9.5.4",
    "tsify": "5.0.4",
    "typescript": "5.9.3",
    "webpack": "5.102.0",
    "webpack-cli": "6.0.1",
    "webpack-remove-empty-scripts": "1.1.1"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
