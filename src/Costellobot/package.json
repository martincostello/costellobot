{
  "name": "costellobot",
  "private": true,
  "version": "1.0.0",
  "description": "GitHub automation for martincostello's repositories.",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts",
    "format-check": "prettier --check scripts/**/*.ts",
    "lint": "eslint --ext .ts scripts",
    "test": "jest --coverage",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/costellobot.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@microsoft/signalr": "^7.0.3",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^28.1.3",
    "moment": "^2.29.4",
    "prettier": "^2.8.4",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.2",
    "tsify": "^5.0.4",
    "typescript": "^4.9.5",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1"
  }
}
