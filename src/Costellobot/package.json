{
  "name": "costellobot",
  "private": true,
  "version": "1.0.0",
  "description": "GitHub automation for martincostello's repositories.",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts && stylelint --fix styles/**/*.css",
    "format-check": "prettier --check scripts/**/*.ts && stylelint --fix styles/**/*.css",
    "lint": "eslint --ext .ts scripts",
    "test": "jest --coverage",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/costellobot.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/core": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "@microsoft/signalr": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^28.1.3",
    "mini-css-extract-plugin": "^2.7.5",
    "moment": "^2.29.4",
    "prettier": "^2.8.8",
    "style-loader": "^3.3.2",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^33.0.0",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.2",
    "tsify": "^5.0.4",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-remove-empty-scripts": "^1.0.3"
  }
}
