{
  "name": "costellobot",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "GitHub automation for martincostello's repositories.",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts && stylelint --fix lax styles/**/*.css",
    "format-check": "prettier --check scripts/**/*.ts && stylelint --fix styles/**/*.css",
    "lint": "eslint scripts",
    "test": "jest",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/costellobot.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@microsoft/signalr": "^8.0.7",
    "@stylistic/eslint-plugin": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "moment": "^2.30.1",
    "prettier": "^3.4.2",
    "style-loader": "^4.0.0",
    "stylelint": "^16.14.0",
    "stylelint-config-standard": "^37.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "tsify": "^5.0.4",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
